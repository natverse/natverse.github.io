	Journal = {Neuron},
	Journal-Full = {Neuron},
	Keywords = {Independent, Drosophila; connectomics; innate behavior; lateral horn; learning; memory; memory recall; mushroom body; neural circuits; olfaction},
	Month = {Sep},
	Mynote = {{Olfactory information in flies and mice diverges onto distinct brain structures proposed to mediate learned and innate behaviour. Here we identify a key requirement for neurons of the fly lateral horn (previously assumed to specific to innate behaviour) in retrieving olfactory memories. Combining EM connectomics, brain imaging and behaviour we propose a circuit model for the integration of learned and innate responses. These principles are very likely shared across sensory modalities and organisms.}},
	Pmid = {30244885},
	Pst = {aheadofprint},
	Title = {Communication from Learned to Innate Olfactory Processing Centers Is Required for Memory Retrieval in Drosophila},
